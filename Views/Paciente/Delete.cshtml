@model Turnos.Models.Paciente



<h4>Seguro que deseas eliminar este paciente?</h4>
    
    <h5>Paciente</h5>
    <hr />
    <div class="row">
        <div class="col s12 m6">
            <div class="card hoverable blue-grey darken-5">
                <div class="card-content white-text">
                    <span class="card-title">
                        <h5><b>@Html.DisplayFor(model => model.Nombre), @Html.DisplayFor(model => model.Apellido)
                        </h5></b>
                    </span>
                    <dt>
                        <h6><b> @Html.DisplayNameFor(model => model.Direccion):</b></h6> @Html.DisplayFor(model =>
                        model.Direccion)
                    </dt>
                    <hr>
                    <dt>
                        <h6><b> @Html.DisplayNameFor(model => model.Telefono):</b></h6> @Html.DisplayFor(model =>
                        model.Telefono)
                    </dt>
                    <hr>
                    <dt>
                        <h6><b> @Html.DisplayNameFor(model => model.Email):</b></h6> @Html.DisplayFor(model =>
                        model.Email)
                    </dt>
                    <hr>

                </div>
                <div class="card-action blue-grey darken-2">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IdPaciente" />
                        <input type="submit" value="Eliminar" class="waves-effect waves-light btn-small orange lighten-2" />
                        <a asp-action="Delete" asp-route-id="@Model.IdPaciente"></a>
                        <a asp-action="Index" class="right">Volver</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <br>
    <br>