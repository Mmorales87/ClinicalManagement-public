@model Turnos.Models.Paciente

<h4>Paciente</h4>

<div class="row">
        <div class="col s12 m6">
            <div class="card hoverable blue-grey darken-5">
                <div class="card-content white-text">
                    <span class="card-title">
                        <h5><b>@Html.DisplayFor(model => model.Nombre), @Html.DisplayFor(model => model.Apellido)
                        </h5></b>
                    </span>
                    <dt>
                        <h6><b> @Html.DisplayNameFor(model => model.Direccion):</b></h6> @Html.DisplayFor(model =>
                        model.Direccion)
                    </dt>
                    <hr>
                    <dt>
                        <h6><b> @Html.DisplayNameFor(model => model.Telefono):</b></h6> @Html.DisplayFor(model =>
                        model.Telefono)
                    </dt>
                    <hr>
                    <dt>
                        <h6><b> @Html.DisplayNameFor(model => model.Email):</b></h6> @Html.DisplayFor(model =>
                        model.Email)
                    </dt>
                   
                </div>
                <div class="card-action blue-grey darken-2">
                    <form action="Delete">
                        <input type="hidden" asp-for="IdPaciente" />
                        <a asp-action="Edit" asp-route-id="@Model.IdPaciente">Editar</a>
                        <a asp-action="Index">Volver</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <br>
    <br>
    