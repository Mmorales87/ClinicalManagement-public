@model IEnumerable<Turnos.Models.Especialidad>

<p>
    <a asp-action="Create" class="btn-floating btn-large grey lighten-1 "> <i class="material-icons">person_add</i> </a>
</p>


<table class="responsive-table highlight z-depth-3 blue lighten-5">
    <thead class="cyan lighten-2 white-text">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
        </tr>
    </thead>

    <tbody>
        @*Aqui colocaremos, mas adelante, el codigo para mostrar los registros de la base de datos*@
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td class="right">
                    <a asp-action="Edit" asp-route-id="@item.IdEspecialidad"><i class="material-icons">create</i></a>
                    <a asp-action="Delete" asp-route-id="@item.IdEspecialidad"><i
                        class="material-icons red-text">delete</i></a>
                </td>
            </tr>
        }
    </tbody>

</table>
